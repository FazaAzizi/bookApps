<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/st2b"
    tools:context=".st2.St2PenilaianActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bl"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/st2a">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penilaian"
            android:layout_gravity="center"
            android:textColor="@color/bl"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/st2gmbrsoal1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bl"
                        android:justificationMode="inter_word"
                        android:text="@string/txtST2soal1"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/st2rg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(1) dan (a)"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(2) dan (b)"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(3) dan (c)"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(4) dan (d)"
                            android:checked="false"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bl"
                        android:justificationMode="inter_word"
                        android:text="@string/txtST2soal2"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/st2rg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seismogram"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seismograf"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Skala richter"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Skala MMI"
                            android:checked="false"/>
                    </RadioGroup>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/st2gmbrsoal2" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bl"
                        android:justificationMode="inter_word"
                        android:text="@string/txtST2soal3"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/st2rg3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Memiliki frekuensi yang tinggi"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Memiliki amplitude yang tinggi"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Memiliki cepat rambat gelombang yang tinggi"
                            android:checked="false"/>
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Memiliki daya getar yang tinggi"
                            android:checked="false"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bl"
                        android:justificationMode="inter_word"
                        android:text="@string/txtST2soal45"
                        android:layout_marginBottom="16dp"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bl"
                        android:justificationMode="inter_word"
                        android:text="@string/txtST2soal4"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/st2rg4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(1) dan (2) " />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(1) dan (3)" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(2) dan (3)" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(2) dan (4)" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bl"
                        android:justificationMode="inter_word"
                        android:text="@string/txtST2soal5"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/st2rg5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(1) dan (2)" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(1) dan (3)" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(2) dan (3)" />
                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="(2) dan (4)" />
                    </RadioGroup>


                    <Button
                        android:id="@+id/st2btnsbmit"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:background="@drawable/roundedbutton"
                        android:layout_gravity="center_horizontal"
                        android:text="Submit"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>



</LinearLayout>